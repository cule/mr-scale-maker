{
  "name": "mr-scale-maker",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:martgnz/mr-scale-maker.git",
  "author": "Martín González <m@martingonzalez.net>",
  "license": "MIT",
  "scripts": {
    "build:js": "babel src -o src/bundle.js",
    "build:css": "postcss src/css/index.css -o src/bundle.css -c",
    "build":
      "yarn run build:js && yarn run build:css && cp {src/bundle.js,src/bundle.css,src/index.html} public/",
    "deploy": "yarn run build && gh-pages -d ./public"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "gh-pages": "^1.1.0",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-nested": "^3.0.0"
  }
}
